{
  "name": "lookyman/coding-standard",
  "description": "",
  "license": "MIT",
  "require": {
    "php": "^7.0",
    "consistence/coding-standard": "^2.0.0",
    "slevomat/coding-standard": "^3.0",
    "squizlabs/php_codesniffer": "^3.0.1",
    "roave/security-advisories": "dev-master"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "^0.9.2",
    "phpstan/phpstan": "^0.7",
    "phpunit/phpunit": "^6.1"
  },
  "autoload": {
    "psr-4": {
      "LookymanCodingStandard\\": "LookymanCodingStandard/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LookymanCodingStandard\\": "tests/"
    }
  },
  "scripts": {
    "lint": "parallel-lint ./LookymanCodingStandard ./tests",
    "cs": "phpcs --colors --extensions=php --encoding=utf-8 -sp ./LookymanCodingStandard ./tests",
    "tests": "phpunit --coverage-text",
    "stan": "phpstan analyse -l 7 -c ./phpstan.neon ./LookymanCodingStandard ./tests",
    "check": [
      "@lint",
      "@cs",
      "@tests",
      "@stan"
    ]
  }
}
