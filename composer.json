{
  "name": "lookyman/coding-standard",
  "description": "",
  "license": "MIT",
  "require": {
    "php": "^7.0",
    "consistence/coding-standard": "^0.13.0",
    "slevomat/coding-standard": "^2.2",
    "squizlabs/php_codesniffer": "^2.8",
    "roave/security-advisories": "dev-master"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "^0.9.2",
    "phpstan/phpstan": "^0.6.4",
    "phpunit/phpunit": "^6.0.2"
  },
  "autoload": {
    "psr-4": {
      "LookymanCodingStandard\\": "LookymanCodingStandard/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LookymanCodingStandard\\": "tests/"
    }
  },
  "scripts": {
    "lint": "parallel-lint ./LookymanCodingStandard ./tests",
    "cs": "phpcs --extensions=php --encoding=utf-8 --standard=./ruleset.xml -sp ./LookymanCodingStandard ./tests",
    "tests": "phpunit --coverage-text",
    "stan": "phpstan analyse -l 5 -c ./phpstan.neon ./LookymanCodingStandard ./tests",
    "check": [
      "@lint",
      "@cs",
      "@tests",
      "@stan"
    ]
  }
}
